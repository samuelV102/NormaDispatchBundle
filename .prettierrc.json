{
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "plugins": ["prettier-plugin-twig-melody", "@prettier/plugin-php"],
    "twigPrintWidth": 180,
    "twigSingleQuote": true,
    "twigAlwaysBreakObjects": true,
    "twigFollowOfficialCodingStandards": true,
    "twigOutputEndblockName": true,
    "twigMultiTags": [
        "nav,endnav",
        "switch,case,default,endswitch",
        "ifchildren,endifchildren",
        "cache,endcache",
        "js,endjs"
    ],
    "phpVersion": "8.1",
    "trailingCommaPHP": true,
    "braceStyle": "psr-2",
    "arrowParens": "always",
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "proseWrap": "preserve",
    "requirePragma": false,
    "trailingComma": "none",
    "endOfLine": "lf"
}
